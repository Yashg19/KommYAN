<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.kommunity.Login"
    android:id="@+id/background"
    android:background="@drawable/comm"
    android:gravity="top"
    android:touchscreenBlocksFocus="false">

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:hint="Enter your User ID"
        android:ems="10"
        android:id="@+id/usernameRegisterEditText"
        android:theme="@style/Base.TextAppearance.AppCompat.Headline"
        android:background="#96373737"
        android:autoText="false"
        android:gravity="center"
        android:textColor="#fff8f8f8"
        android:layout_above="@+id/passwordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:editable="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Enter your Password"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:theme="@style/Base.TextAppearance.AppCompat.Headline"
        android:background="#96373737"
        android:textColor="#fff8f8f8"
        android:gravity="center"
        android:autoText="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Join in"
        android:id="@+id/login_but"
        android:layout_above="@+id/login_button"
        android:layout_alignRight="@+id/passwordEditText"
        android:layout_alignEnd="@+id/passwordEditText" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/passwordEditText"
        android:layout_alignEnd="@+id/passwordEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/usernameRegisterEditText"
        android:layout_alignStart="@+id/usernameRegisterEditText" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView" />


</RelativeLayout>
